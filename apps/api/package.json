{
	"name": "@lexical/api",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": "./src/index.ts"
	},
	"scripts": {
		"dev": "tsx watch --env-file=.env src/index.ts",
		"build": "tsup src/index.ts --format esm --target node20",
		"start": "node dist/index.js",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "tsx --env-file=.env src/db/migrate.ts",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio"
	},
	"dependencies": {
		"@ai-sdk/openai": "^3.0.1",
		"@hono/node-server": "^1.19.6",
		"@hono/trpc-server": "^0.4.1",
		"@trpc/server": "^11.8.1",
		"ai": "^6.0.3",
		"drizzle-orm": "^0.45.1",
		"hono": "^4.11.3",
		"openai": "^6.15.0",
		"pg": "^8.16.3",
		"zod": "^3.24.0"
	},
	"devDependencies": {
		"@types/node": "^20.11.17",
		"@types/pg": "^8.16.0",
		"drizzle-kit": "^0.31.8",
		"tsup": "^8.4.0",
		"tsx": "^4.7.1",
		"typescript": "^5.8.3"
	}
}
