{
    "compilerOptions": {
        // Environment setup & latest features
        "lib": ["ESNext"],
        "target": "ESNext",
        "module": "ESNext",
        "moduleDetection": "force",
        "allowJs": true,

        // Bundler mode
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,

        // Path mappings for monorepo
        "paths": {
            "@lexical.app/server": ["./server/src/index.ts"],
            "@lexical.app/app": ["./app/src/index.ts"],
            "@lexical.app/api-types": ["./packages/api-types/src/index.ts"],
            "@lexical.app/utils": ["./packages/utils/src/index.ts"],
            "@lexical.app/validators": ["./packages/validators/src/index.ts"]
        },

        // Best practices
        "strict": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,

        // Stricter flags
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "erasableSyntaxOnly": false
    }
}
