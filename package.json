{
    "name": "@lexical.app/root",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "app",
        "server"
    ],
    "scripts": {
        "dev": "bun run --filter '*' dev",
        "dev:app": "bun run --filter @lexical.app/app dev",
        "dev:server": "bun run --filter @lexical.app/server dev",
        "build": "bun run --filter '*' build",
        "build:app": "bun run --filter @lexical.app/app build",
        "lint": "eslint .",
        "lint:workspaces": "bun run --filter '*' lint",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "typecheck": "bun run --filter '*' typecheck"
    },
    "devDependencies": {
        "@eslint/js": "^9.36.0",
        "@types/node": "^24.6.0",
        "eslint": "^9.36.0",
        "globals": "^16.4.0",
        "prettier": "^3.6.2",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.45.0"
    },
    "dependencies": {
        "@trpc/client": "^11.6.0",
        "@trpc/server": "^11.6.0",
        "zod": "^4.1.12"
    }
}
